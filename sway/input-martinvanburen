input type:touchpad {
    #accel_profile adaptive
    #pointer_accel 0.1
    tap enabled
    middle_emulation enabled
    #tap_button_map lrm
}

# Built-in keyboard
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout "us"
    xkb_variant "ppdv"
    xkb_numlock disabled
}

# Trigger mouse buttons
input "12068:309:Mouse_for_Windows" {
    left_handed enabled
}

input "1390:342:ELECOM_Relacon_Mouse" {
    accel_profile flat
    pointer_accel 0.0000001
}


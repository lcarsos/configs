# Read `man 5 sway` for a complete reference.

xwayland enable

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred terminal emulator
set $term kitty
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
set $menu bemenu-run | xargs swaymsg exec --
#set $menu dmenu_path | dmenu | xargs swaymsg exec --

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

output eDP-1 {
    scale 1
}

output 'GIGA-BYTE TECHNOLOGY CO., LTD. M27U 23463B000001' {
    mode 3840x2160@150Hz
    transform 270
    position 0,1440
    adaptive_sync on
}
output 'Acer Technologies XV273K 0x04910584' {
    scale 1
    position 2160,1440
    mode 3840x2160@119.910Hz
    adaptive_sync on
}
output 'GIGA-BYTE TECHNOLOGY CO., LTD. M27U 23063B000344' {
    adaptive_sync on
    mode 3840x2160@150Hz
    position 6000,1440
    adaptive_sync on
    transform 90
}
output 'ASUSTek COMPUTER INC ASUS MB16AMT L5LMTF005738' {
    scale 1.0
    transform 270
    position 1800,2160
}
output 'Ancor Communications Inc ASUS PB277 0x00033744' {
    scale 1.0
    position 2160,0
}
input '3823:49152:eGalax_Inc._eGalaxTouch_EXC3200-2505-09.00.00.00' map_to_output 'ASUSTek COMPUTER INC ASUS MB16AMT L5LMTF005738'


# wake up the internal display
bindsym $mod+Shift+Ctrl+r output eDP-1 enable
bindsym $mod+F12 output * dpms on

include idle
include monitor

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input type:keyboard {
    xkb_options "compose:menu,caps:ctrl_modifier"
    xkb_numlock enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout "us"
    xkb_variant "dvorak"
    xkb_numlock disabled
}

input "1452:613:Apple_Inc._Magic_Trackpad" {
    natural_scroll disabled
}

include input

bindsym XF86AudioMute exec ~/.local/bin/toggle-volume.sh
bindsym XF86AudioRaiseVolume exec ~/.local/bin/increase-volume.sh
bindsym XF86AudioLowerVolume exec ~/.local/bin/decrease-volume.sh
bindsym XF86MonBrightnessUp exec   ~/.local/bin/increase-brightness.sh
bindsym XF86MonBrightnessDown exec ~/.local/bin/decrease-brightness.sh
bindsym XF86AudioPlay exec playerctl -i "firefox" play-pause
bindsym XF86AudioPrev exec playerctl -i "firefox" previous
bindsym XF86AudioNext exec playerctl -i "firefox" next

bindsym Print exec ~/.local/bin/scrrect
bindsym $mod+Print exec grim

### Key bindings
#
# Basics:
#
# Start a terminal
bindsym $mod+Return exec $term
bindsym $mod+b exec firefox

# Kill focused window
bindsym $mod+Shift+c kill

# Start your launcher
bindsym $mod+Space exec $menu


# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+q reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+Ctrl+e exit
#bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Tab workspace back_and_forth
    bindsym $mod+Alt+Tab focus next
    bindsym $mod+Shift+Tab focus prev

    bindsym $mod+F1 focus output $disp1
    bindsym $mod+F2 focus output $disp2
    bindsym $mod+F3 focus output $disp3
    bindsym $mod+F4 focus output $disp4

    bindsym $mod+Shift+F1 move workspace to output $disp1
    bindsym $mod+Shift+F2 move workspace to output $disp2
    bindsym $mod+Shift+F3 move workspace to output $disp3
    bindsym $mod+Shift+F4 move workspace to output $disp4

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4
    bindsym $mod+5 workspace 5
    bindsym $mod+6 workspace 6
    bindsym $mod+7 workspace 7
    bindsym $mod+8 workspace 8
    bindsym $mod+9 workspace 9
    bindsym $mod+0 workspace 10

    bindsym $mod+Alt+a workspace a
    bindsym $mod+Alt+b workspace b
    bindsym $mod+Alt+c workspace c
    bindsym $mod+Alt+d workspace d
    bindsym $mod+Alt+e workspace e
    bindsym $mod+Alt+f workspace f
    bindsym $mod+Alt+g workspace g
    bindsym $mod+Alt+h workspace h
    bindsym $mod+Alt+i workspace i
    bindsym $mod+Alt+j workspace j
    bindsym $mod+Alt+k workspace k
    bindsym $mod+Alt+l workspace l
    bindsym $mod+Alt+m workspace m
    bindsym $mod+Alt+n workspace n
    bindsym $mod+Alt+o workspace o
    bindsym $mod+Alt+p workspace p
    bindsym $mod+Alt+q workspace q
    bindsym $mod+Alt+r workspace r
    bindsym $mod+Alt+s workspace s
    bindsym $mod+Alt+t workspace t
    bindsym $mod+Alt+u workspace u
    bindsym $mod+Alt+v workspace v
    bindsym $mod+Alt+w workspace w
    bindsym $mod+Alt+x workspace x
    bindsym $mod+Alt+y workspace y
    bindsym $mod+Alt+z workspace z

    bindsym $mod+Comma workspace prev_on_output
    bindsym $mod+Period workspace next_on_output
    bindsym $mod+Backspace workspace back_and_forth

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace 1
    bindsym $mod+Shift+2 move container to workspace 2
    bindsym $mod+Shift+3 move container to workspace 3
    bindsym $mod+Shift+4 move container to workspace 4
    bindsym $mod+Shift+5 move container to workspace 5
    bindsym $mod+Shift+6 move container to workspace 6
    bindsym $mod+Shift+7 move container to workspace 7
    bindsym $mod+Shift+8 move container to workspace 8
    bindsym $mod+Shift+9 move container to workspace 9
    bindsym $mod+Shift+0 move container to workspace 10

    bindsym $mod+Alt+Shift+a move container to workspace a
    bindsym $mod+Alt+Shift+b move container to workspace b
    bindsym $mod+Alt+Shift+c move container to workspace c
    bindsym $mod+Alt+Shift+d move container to workspace d
    bindsym $mod+Alt+Shift+e move container to workspace e
    bindsym $mod+Alt+Shift+f move container to workspace f
    bindsym $mod+Alt+Shift+g move container to workspace g
    bindsym $mod+Alt+Shift+h move container to workspace h
    bindsym $mod+Alt+Shift+i move container to workspace i
    bindsym $mod+Alt+Shift+j move container to workspace j
    bindsym $mod+Alt+Shift+k move container to workspace k
    bindsym $mod+Alt+Shift+l move container to workspace l
    bindsym $mod+Alt+Shift+m move container to workspace m
    bindsym $mod+Alt+Shift+n move container to workspace n
    bindsym $mod+Alt+Shift+o move container to workspace o
    bindsym $mod+Alt+Shift+p move container to workspace p
    bindsym $mod+Alt+Shift+q move container to workspace q
    bindsym $mod+Alt+Shift+r move container to workspace r
    bindsym $mod+Alt+Shift+s move container to workspace s
    bindsym $mod+Alt+Shift+t move container to workspace t
    bindsym $mod+Alt+Shift+u move container to workspace u
    bindsym $mod+Alt+Shift+v move container to workspace v
    bindsym $mod+Alt+Shift+w move container to workspace w
    bindsym $mod+Alt+Shift+x move container to workspace x
    bindsym $mod+Alt+Shift+y move container to workspace y
    bindsym $mod+Alt+Shift+z move container to workspace z
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
#
# Layout stuff:
#
    font pango:monospace 1
    titlebar_border_thickness 0
    titlebar_padding 1
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+v splitv
    bindsym $mod+z splith

    # Switch the current container between different layout styles
    #bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+grave floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+grave focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    bindsym $mod+t sticky toggle
#
# Scratchpad:
#
    # Swaj has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

include status

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec_always fcitx5 -d --replace
exec ~/.config/sway/bg-shuffle.sh

include rules

include /etc/sway/config.d/*
